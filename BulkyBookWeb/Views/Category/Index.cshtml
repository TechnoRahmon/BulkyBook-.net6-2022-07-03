

@model  IEnumerable<Category>
@{
    ViewData["Title"] = "Index";

}

<div class="container p-3">
    <div class="row pt-4 mb-5">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle me-1"></i> Create Category
            </a>
        </div>

    </div>


    <table class="table table-hover w-100">
        
        <thead class="table-secondary">
            <tr>
                <th>
                    Category Name
                </th>
                    <th>
                   Display Orders
                </th>
                <th></th>

            </tr>
        </thead>

        <tbody>
            @foreach (var obj in Model)
            {
                <tr class="table-dark">
                    <td width="50%">
                        @obj.Name
                    </td>
                    <td width="30%">
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square  text-white me-1 "></i>Edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash text-white"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>